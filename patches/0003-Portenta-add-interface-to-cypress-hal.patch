+
+/** @brief SDIO controller initial configuration */
+typedef struct
+{
+    uint32_t frequencyhal_hz; //!< Clock frequency, in hertz
+    uint16_t block_size;      //!< Block size
+} cyhal_sdio_cfg_t;
+
+/** Callback for SDIO events */
